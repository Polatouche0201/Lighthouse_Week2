    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }
      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <style>
      html,
      body {
        height: 100%;
      }
      body {
        display: -ms-flexbox;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #b3d7ff;
      }
    </style>
  </head>

  <body style="font-size:20px; padding:50px;"  class="text-center">
    <header>
      <% include ./partials/_header %>
    </header>
    <h1 class="h3 mb-3 font-weight-normal">
      Update Address for Tiny URL
    </h1>
      <% if(longURL){ %>
        <table class="text-left" align="center">
          <tr>
            <td>
              <label for="longURL"><%=shortURL%> :</label>
            </td>
            <td>
              <form class="form-inline" method="POST" action="/urls/<%= shortURL%>/update">
                <input class="form-control" type="text" name="longURL" placeholder="<%=longURL.longURL%>" style="width: 300px; margin: 1em">
                <button type="submit" class="btn btn-primary">Update</button>
              </form>
            </td>
          </tr>
        </table>
      <% } else { %>
        <div class="alert alert-danger text-center" role="alert">
          <h5><b><%= shortURL%></b> is an invalid Tiny URL ID !</h5>
          <h6>
            Please make sure your input a correct ID, or create a new one:
          </h6>
          <a class="alert-link" href="/urls/new" style="margin: 1em">
            Creat New TinyURL
          </a>
        </div>
      <% } %>

    <% include ./partials/_footer %>
  </body>
</html>
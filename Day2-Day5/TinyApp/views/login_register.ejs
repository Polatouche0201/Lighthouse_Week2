  <body style="font-size:20px; padding:50px;"  class="text-center">
    <header>
      <% include ./partials/_header %>
    </header>

    <% if(login_register){ %>
      <form class="form-signin" method="POST" action="/login">
    <% } else{ %>
      <form class="form-signin" method="POST" action="/register">
    <% } %>
      <h1 class="h3 mb-3 font-weight-normal">
        <% if(login_register){ %>
          Please Sign In
          <% if(errorID === 0){ %>
            <br>
          <% } else { %>
            <div class="alert alert-danger text-left" role="alert">
              <h6><b>Errors</b>:
                <% if(errorID === 1){ %>
                  No Such User, the Email Has Not Been Registed.
                <% } %>
                <% if(errorID === 2){ %>
                  Password Incorrect.
                <% } %>
              </h6>
            </div>
          <% } %>
        <% } else{ %>
          Welcome To Enroll
          <% if(errorID === 0){ %>
            <br>
          <% } else { %>
            <div class="alert alert-danger text-left" role="alert">
              <h6><b>Errors</b>:
                <% if(errorID === 1){ %>
                  Please Make Sure You've Entered The Same Password Twice.
                <% } %>
                <% if(errorID === 2){ %>
                  Your Password Needs At Least 4 Digitals.
                <% } %>
                <% if(errorID === 3){ %>
                  The Email Has Been Registed. Please Change Another.
                <% } %>
              </h6>
            </div>
          <% } %>
        <% } %>
      </h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" name = "email" class="form-control" placeholder="Email address" required autofocus>
      <% if(login_register){ %>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name = "password" id="inputPassword" class="form-control" placeholder="Password" required>
        <br>
        <button class="btn btn-lg btn-info btn-block" type="submit">Sign in</button>
      <% } else{ %>
        <br>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name = "password" class="form-control" placeholder="Password" required>
        <label for="confirmPassword" class="sr-only">Confirm password</label>
        <input type="password" name = "confirm_password" class="form-control" placeholder="Confirm Your Password" required>
        <br>
        <button class="btn btn-lg btn-info btn-block" type="submit">
          Create Account
        </button>
      <% } %>
    </form>
    <% include ./partials/_footer %>
  </body>
</html>
